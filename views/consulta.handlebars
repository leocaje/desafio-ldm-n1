<div class="container">
    <h1>Tela de Consulta</h1>

    <table class="table">

        <thead>
            <tr>
                <th>Nome</th>
                <th>Endereço</th>
                <th>Bairro</th>
                <th style="width: 200px;">Ações</th>
            </tr>
        </thead>

        <tbody>
            {{#each posts}}
                {{#dataValues}}
                    <tr>
                        <td>{{this.nome}}</td>
                        <td>{{this.endereco}}</td>
                        <td>{{this.bairro}}</td>
                        <td style="width: 200px;">
                            <a href="/editar/{{this.id}}" class="btn btn-primary">Editar</a>
                            <a href="/excluir/{{this.id}}" class="btn btn-danger">Excluir</a>
                        </td>
                    </tr>
                {{/dataValues}}
            {{/each}}
        </tbody>
    </table>

</div>